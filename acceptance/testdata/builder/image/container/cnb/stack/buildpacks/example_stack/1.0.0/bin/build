#!/bin/bash

echo "hello" > /file-to-snapshot

EXECFILE=/bin/exe-to-snapshot
if test -f "$EXECFILE"; then
    echo "$EXECFILE restored from cache"
else
    echo "$EXECFILE does not exist!"
    echo "hello" > /bin/exe-to-snapshot
    chmod +x /bin/exe-to-snapshot
fi

# this should be ignored
mkdir -p /cnb
echo "hello" > /cnb/file-to-ignore

# this should create a whiteout file
rm -f /usr/bin/apt

echo "done:stack"
exit 0
