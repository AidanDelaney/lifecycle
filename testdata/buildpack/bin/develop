#!/bin/bash

set -eu

platform_dir=$1
cache_dir=$2

echo "STDOUT${ID}"
>&2 echo "STDERR${ID}"

[[ -d "cache-buildpack${ID}" ]] && cp -a "cache-buildpack${ID}/." "$cache_dir"

cp -a "$platform_dir/env" "./env-buildpack${ID}"

cat > "$platform_dir/develop.toml" <<EOF
[[processes]]
type = "process${ID}-type"
command = "process${ID}-command"

[[processes]]
type = "override-type"
command = "process${ID}-command"
EOF