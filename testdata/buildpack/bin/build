#!/bin/bash

set -eu

launch_dir=$1
cache_dir=$2
platform_dir=$3

echo STDOUT
>&2 echo STDERR

mkdir "$cache_dir/cache1" "$cache_dir/cache2"
mkdir "$launch_dir/launch1" "$launch_dir/launch2"

echo * > "$launch_dir/launch1/app-dir"
( cd "$platform_dir/env" && echo * > "$launch_dir/launch1/env-dir" )

cat > "$launch_dir/launch.toml" <<EOF
[[processes]]
type = "${PROCESS}-type"
command = "${PROCESS}-command"

[[processes]]
type = "override-type"
command = "${PROCESS}-command"
EOF